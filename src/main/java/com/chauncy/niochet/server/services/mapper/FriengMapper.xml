<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="niochet.FriendMapper">
    <select id="selectFriend" resultMap="friendMap">
        SELECT * FROM friend WHERE u_id = #{id}
    </select>

    <resultMap id="friendMap" type="Friend">
        <collection property="groups" javaType="FriendGroup">

        </collection>
    </resultMap>
</mapper>